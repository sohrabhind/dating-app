<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/get_badge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diamond_purchase"
                android:textColor="@color/md_theme_balck_3"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:gravity="center"/>


            <ImageView
                android:id="@+id/level_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/level_gold"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/total_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1500 Messages"
                android:textColor="@color/md_theme_balck_3"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center" />


            <TextView
                android:id="@+id/total_likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500 Likes"
                android:textColor="@color/md_theme_balck_3"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center" />


            <TextView
                android:id="@+id/profile_boost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open 20 Chats Daily"
                android:textColor="@color/md_theme_balck_3"
                android:textSize="16dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:layout_gravity="center" />




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/gradation_primary"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/iap1_google_btn"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/level_silver"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/silver_purchase"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Month"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/iap1_google_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_buy_iap1_google_pay"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="center" />


            </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradation_primary" />


            <LinearLayout
                android:id="@+id/iap2_google_btn"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/level_gold"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gold_purchase"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Month"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/iap2_google_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_buy_iap2_google_pay"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>


            </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradation_primary" />


            <LinearLayout
                android:id="@+id/iap3_google_btn"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="18dp"
                android:paddingBottom="18dp" >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/level_diamond"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/diamond_purchase"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Month"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/iap3_google_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_buy_iap3_google_pay"
                    android:textColor="@color/md_theme_balck_3"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="center" />


            </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/gradation_primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/action_buy_plan"
                android:id="@+id/iap_google_btn"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/app_profile_button"
                android:gravity="center"
                android:textColor="@color/md_theme_white_3"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
