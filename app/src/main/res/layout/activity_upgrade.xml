<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_login">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/silver"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/level_silver"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:layout_gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/silver_purchase"
                        android:textColor="@color/colorTitle"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_buy_iap1_google_pay"
                        android:textColor="@color/colorSubTitle"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="@string/action_buy_plan"
                    android:id="@+id/iap1_google_btn"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/app_profile_button"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSeparator" />

            <LinearLayout
                android:id="@+id/gold"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/level_gold"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"  >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gold_purchase"
                        android:textColor="@color/colorTitle"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_buy_iap2_google_pay"
                        android:textColor="@color/colorSubTitle"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="@string/action_buy_plan"
                    android:id="@+id/iap2_google_btn"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/app_profile_button"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSeparator"/>

            <LinearLayout
                android:id="@+id/diamond"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp" >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/level_diamond"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:layout_gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diamond_purchase"
                        android:textColor="@color/colorTitle"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_buy_iap3_google_pay"
                        android:textColor="@color/colorSubTitle"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="@string/action_buy_plan"
                    android:id="@+id/iap3_google_btn"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/app_profile_button"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSeparator" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
