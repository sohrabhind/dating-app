<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">


            <EditText
                android:id="@+id/currentPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/md_theme_balck_3"
                android:background="@drawable/edittext_transparent"
                android:ems="10"
                android:hint="@string/placeholder_current_password"
                android:inputType="textPassword"
                android:maxLength="64"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textCursorDrawable="@null"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/deactivateBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/action_deactivate"
                android:background="@drawable/app_profile_button"
                android:gravity="center"
                android:textColor="@color/md_theme_white_3"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>