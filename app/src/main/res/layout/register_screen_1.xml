<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.investokar.poppi.view.GradientTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:gravity="center"
            android:text="@string/register_screen_6_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/md_theme_balck_3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@string/register_screen_6_subtitle"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/md_theme_balck_3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/button_gender_male"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/md_theme_white_3"
                android:background="@drawable/edit_profile_button"
                android:gravity="center"
                android:text="I am a boy (male)"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/button_gender_female"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/md_theme_white_3"
                android:background="@drawable/edit_profile_button"
                android:gravity="center"
                android:text="I am a girl (female)"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>


        <TextView
            android:id="@+id/center_next_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/action_next"
            android:textColor="@color/md_theme_white_3"
            android:background="@drawable/app_profile_button"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>



</RelativeLayout>