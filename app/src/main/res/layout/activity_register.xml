<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.investokar.poppi.util.CustomViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/navigator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/layout_markers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".5"
                android:background="@color/md_theme_balck_2" />

            <ImageView
                android:id="@+id/button_next"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/guidance_up_arrow"
                app:tint="@color/md_theme_primary_1"
                android:contentDescription="@string/action_next" />

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/guidance_down_arrow"
                app:tint="@color/md_theme_primary_1"
                android:contentDescription="@string/action_back" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>