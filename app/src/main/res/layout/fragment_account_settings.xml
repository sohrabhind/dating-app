<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="@string/placeholder_fullname"
                android:id="@+id/fullname"
                android:maxLength="55"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:textColorHint="@color/material_on_background_disabled"
                android:textCursorDrawable="@null"
                android:background="@drawable/edittext_transparent"
                android:layout_gravity="center_horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_location"
                android:visibility="gone"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="@string/placeholder_location"
                android:id="@+id/location"
                android:visibility="gone"
                android:maxLength="255"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:textColorHint="@color/material_on_background_disabled"
                android:textCursorDrawable="@null"
                android:background="@drawable/edittext_transparent"
                android:layout_gravity="center_horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_interests"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/placeholder_interests"
                android:id="@+id/interests"
                android:maxLength="255"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:textColorHint="@color/material_on_background_disabled"
                android:textCursorDrawable="@null"
                android:background="@drawable/edittext_transparent"
                android:layout_gravity="center_horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_bio"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:hint="@string/placeholder_bio"
                android:inputType="textMultiLine"
                android:maxLength="255"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:textColorHint="@color/material_on_background_disabled"
                android:textCursorDrawable="@null"
                android:id="@+id/bio"
                android:background="@drawable/edittext_transparent"
                android:padding="10dp"
                android:layout_marginTop="5dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_age"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/label_age"
                android:id="@+id/ageField"
                android:maxLength="3"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:textColorHint="@color/material_on_background_disabled"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_transparent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_height"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_marginTop="10dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/label_height"
                android:id="@+id/heightField"
                android:maxLength="3"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:textColorHint="@color/material_on_background_disabled"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_transparent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp" />
                

            <TextView
                android:id="@+id/selectGender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:text="Gender"
                android:textColor="@color/md_theme_light_onBackground"
                android:background="@drawable/edit_profile_button"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/selectReligiousView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:text="Religious View"
                android:textColor="@color/md_theme_light_onBackground"
                android:background="@drawable/edit_profile_button"
                android:gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/selectSmokingViews"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:text="Smoking Views"
                android:textColor="@color/md_theme_light_onBackground"
                android:background="@drawable/edit_profile_button"
                android:gravity="center"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/selectAlcoholViews"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:text="Alcohol Views"
                android:textColor="@color/md_theme_light_onBackground"
                android:background="@drawable/edit_profile_button"
                android:gravity="center"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/selectYouLooking"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:text="You Looking"
                android:textColor="@color/md_theme_light_onBackground"
                android:background="@drawable/edit_profile_button"
                android:gravity="center"
                android:layout_marginTop="10dp" />



            <TextView
                android:id="@+id/selectYouLike"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:text="You Like"
                android:textColor="@color/md_theme_light_onBackground"
                android:background="@drawable/edit_profile_button"
                android:gravity="center"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>