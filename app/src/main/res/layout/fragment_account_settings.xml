<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="@string/placeholder_fullname"
                android:id="@+id/fullname"
                android:maxLength="55"
                android:background="@drawable/edittext_color"
                android:layout_gravity="center_horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="@string/placeholder_location"
                android:id="@+id/location"
                android:maxLength="255"
                android:background="@drawable/edittext_color"
                android:layout_gravity="center_horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/placeholder_instagram_page"
                android:id="@+id/instagramPage"
                android:maxLength="255"
                android:maxLines="1"
                android:background="@drawable/edittext_color"
                android:layout_gravity="center_horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:hint="@string/placeholder_bio"
                android:inputType="textMultiLine"
                android:maxLength="255"
                android:id="@+id/bio"
                android:background="@drawable/edittext_color"
                android:padding="10dp"
                android:layout_marginTop="10dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_profile_allow_show_birth"
                android:id="@+id/allowShowDateBirth"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/label_age"
                android:id="@+id/ageField"
                android:maxLength="3"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_color"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/label_height"
                android:id="@+id/heightField"
                android:maxLength="3"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_color"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/label_weight"
                android:id="@+id/weightField"
                android:maxLength="3"
                android:inputType="number"
                android:background="@drawable/edittext_color"
                android:layout_gravity="center_horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Gender"
                android:id="@+id/selectGender"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_color"
                android:visibility="gone"
                android:textColor="@color/overlay_dark_60" />


            <TextView
                android:id="@+id/selectBirth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Date of Birth"
                android:textColor="@color/overlay_dark_60"
                android:background="@drawable/edittext_color"
                android:gravity="center"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/selectRelationshipStatus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Relationship status"
                android:textColor="@color/overlay_dark_60"
                android:background="@drawable/edittext_color"
                android:gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/selectReligiousView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Religious View"
                android:textColor="@color/overlay_dark_60"
                android:background="@drawable/edittext_color"
                android:gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/selectSmokingViews"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Smoking Views"
                android:textColor="@color/overlay_dark_60"
                android:background="@drawable/edittext_color"
                android:gravity="center"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/selectAlcoholViews"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Alcohol Views"
                android:textColor="@color/overlay_dark_60"
                android:background="@drawable/edittext_color"
                android:gravity="center"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/selectYouLooking"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="You Looking"
                android:textColor="@color/overlay_dark_60"
                android:background="@drawable/edittext_color"
                android:gravity="center"
                android:layout_marginTop="10dp" />



            <TextView
                android:id="@+id/selectYouLike"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="You Like"
                android:textColor="@color/overlay_dark_60"
                android:background="@drawable/edittext_color"
                android:gravity="center"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>