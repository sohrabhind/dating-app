<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:background="@color/md_theme_white_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_layout_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

        </LinearLayout>

        <com.investokar.poppi.util.CustomViewPager
            android:id="@+id/container_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/nav_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/gradation_primary"
            app:tabIndicatorColor="@color/md_theme_white_3"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabPadding="15dp">
        </com.google.android.material.tabs.TabLayout>


    </LinearLayout>

</RelativeLayout>