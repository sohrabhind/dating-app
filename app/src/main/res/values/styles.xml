<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PhotoViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_theme_balck_3</item>
        <item name="colorPrimaryDark">@color/md_theme_balck_3</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="fontFamily">@font/gotham_medium</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:spinnerItemStyle">@style/MooSpinnerItem</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="fontFamily">@font/gotham_medium</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.Material3.DayNight">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/md_theme_primary_1</item>
        <item name="colorOnPrimary">@color/md_theme_white_3</item>
        <item name="colorPrimaryContainer">@color/md_theme_primary_1</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_white_3</item>
        <item name="colorSecondary">@color/md_theme_white_2</item>
        <item name="colorOnSecondary">@color/md_theme_balck_2</item>
        <item name="colorSecondaryContainer">@color/md_theme_white_3</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_white_2</item>
        <item name="colorTertiary">@color/md_theme_primary_3</item>
        <item name="colorOnTertiary">@color/md_theme_primary_1</item>
        <item name="colorTertiaryContainer">@color/md_theme_primary_2</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_white_1</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_white_1</item>
        <item name="android:colorBackground">@color/md_theme_white_3</item>
        <item name="android:windowBackground">@color/md_theme_white_3</item>
        <item name="colorOnBackground">@color/md_theme_balck_3</item>
        <item name="colorSurface">@color/md_theme_white_2</item>
        <item name="colorOnSurface">@color/md_theme_white_2</item>
        <item name="colorSurfaceVariant">@color/md_theme_balck_1</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_balck_1</item>
        <item name="colorOutline">@color/md_theme_balck_1</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_balck_2</item>
        <item name="colorSurfaceInverse">@color/md_theme_white_1</item>
        <item name="colorPrimaryInverse">@color/md_theme_primary_3</item>
        <item name="colorOutlineVariant">@color/md_theme_balck_2</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textColor">@color/md_theme_balck_3</item>
        <item name="android:textColorHint">@color/md_theme_balck_1</item>
        <item name="android:statusBarColor">@color/md_theme_white_3</item>
        <item name="colorControlNormal">@color/md_theme_white_3</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>


    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>


    <style name="BottomSheetRoundCorner" parent="Widget.Material3.BottomSheet">
        <item name="android:colorBackground">@color/transparent</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="MooSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/MooTextAppearanceSpinnerItem</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="fontFamily">@font/gotham_medium</item>
    </style>

    <style name="MooTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="fontFamily">@font/gotham_medium</item>
    </style>

    <style name="TextAppearance.Subhead.Bold" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="fontFamily">@font/gotham_medium</item>
    </style>

</resources>