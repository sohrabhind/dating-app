<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="@color/colorLikeActiveIconTint" />
            <gradient
                android:angle="360"
                android:startColor="@color/colorLikeIconTint"
                android:endColor="@color/colorLikeActiveIconTint"  />
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="@color/colorLikeActiveIconTint" />
            <gradient
                android:angle="360"
                android:startColor="@color/colorLikeActiveIconTint"
                android:endColor="@color/colorLikeIconTint" />
        </shape>
    </item>
</selector>