<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="@color/md_theme_light_tertiaryContainer" />
            <gradient
                android:angle="360"
                android:startColor="@color/md_theme_light_tertiaryContainer"
                android:endColor="@color/md_theme_light_tertiaryContainer"  />
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="@color/md_theme_light_tertiaryContainer" />
            <gradient
                android:angle="360"
                android:startColor="@color/md_theme_light_tertiaryContainer"
                android:endColor="@color/md_theme_light_tertiaryContainer" />
        </shape>
    </item>
</selector>