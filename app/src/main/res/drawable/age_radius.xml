<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="72dp" />
            <stroke
                android:width="13dp"
                android:color="@color/colorBadgeBackground" />
            <gradient
                android:angle="-90"
                android:startColor="@color/overlay_light_70"
                android:endColor="@color/overlay_light_70"  />
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="72dp" />
            <stroke
                android:width="13dp"
                android:color="@color/colorCounterBackground" />
            <gradient
                android:angle="-90"
                android:startColor="@color/overlay_light_90"
                android:endColor="@color/overlay_light_90" />
        </shape>
    </item>
</selector>