<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="72dp" />
            <stroke
                android:width="13dp"
                android:color="@color/red" />
            <gradient
                android:angle="-90"
                android:startColor="@color/md_theme_light_background"
                android:endColor="@color/md_theme_light_background"  />
        </shape>
    </item>
    
    <item >
        <shape
            android:shape="rectangle"  >
