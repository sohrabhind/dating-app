<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="72dp" />
            <stroke
                android:width="13dp"
                android:color="@color/md_theme_primary_1" />
            <gradient
                android:angle="-90"
                android:startColor="@color/md_theme_white_3"
                android:endColor="@color/md_theme_white_3"  />
        </shape>
    </item>
    
    <item >
